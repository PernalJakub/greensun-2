# ===== KONFIGURACJA ŚRODOWISKA =====
# Skopiuj ten plik jako .env i uzupełnij prawdziwe dane

# Port serwera
PORT=3000

# Konfiguracja email SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Adresy email
SENDER_EMAIL=noreply@greensun.pl
SENDER_NAME=GreenSun Contact Form
RECIPIENT_EMAIL=contact@greensun.pl

# Rate limiting
MAX_REQUESTS_PER_HOUR=5

# Tryb development/production
NODE_ENV=development

# Klucz do CAPTCHA (opcjonalnie)
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key